{
  "filters": {},
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120
      },
      "ja-no-mixed-period": false
    },
    "spellcheck-tech-word": true,
    "ja-no-mixed-period": {
      "periodMark": "。",
      "allowPeriodMarks": [
        "。",
        "、",
        ":"
      ]
    }
  }
}
